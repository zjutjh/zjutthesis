% 宋体
\IfFileExists{fonts/msfonts/SimSun.ttf}{
    \setCJKmainfont[ExternalLocation=fonts/msfonts/]{SimSun.ttf}
    \setCJKmonofont[ExternalLocation=fonts/msfonts/]{SimSun.ttf}
    \newfontfamily\songti[Path="fonts/msfonts/"]{SimSun.ttf}
}{
    \setCJKmainfont{SimSun}
    \setCJKmonofont{SimSun}
    \setCJKfamilyfont{SongTi}{SimSun}
    \DeclareRobustCommand{\songti}{\CJKfamily{SongTi}}
}
 % 黑体
\IfFileExists{fonts/msfonts/SimHei.ttf}{
    \setCJKsansfont[ExternalLocation=fonts/msfonts/]{SimHei.ttf}
    \newfontfamily\heiti[Path="fonts/msfonts/"]{SimHei.ttf}
}{
    \setCJKsansfont{SimHei}
    \setCJKfamilyfont{HeiTi}{SimHei}
    \DeclareRobustCommand{\heiti}{\CJKfamily{HeiTi}}
}
